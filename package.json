{
  "name": "eslint-plugin-jsreport",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "tsx ./tests/index.ts",
    "build": "npm run clear && rolldown --config ./rolldown.config.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clear": "rimraf dist",
    "release": "npm changelogen --release -i",
    "prepare": "husky"
  },
  "keywords": [
    "rolldown",
    "eslint",
    "jsreport"
  ],
  "author": "yxw007<aa4790139@gmail.com>",
  "license": "MIT",
  "description": "jsreport eslint plugin",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@html-eslint/parser": "^0.41.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "changelogen": "^0.6.1",
    "commitlint": "^19.8.1",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "rimraf": "^6.0.1",
    "rolldown": "^1.0.0-beta.18",
    "rolldown-plugin-dts": "^0.13.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts}": [
      "npm run lint:fix"
    ]
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ]
}
